<%- include('../includes/head.ejs')%>
<%- include('../includes/nav.ejs')%>
<body>
    
    <%if (orders.length == 0) { %>
        <h1>No items here</h1>
    <% } else { %>
        <div class="container-fluid">
            <div class="row px-xl-5 justify-content-center align-items-center">
                                <div class="row px-xl-">
                                    <div class="col-lg- table-responsive mb-5">
                                        <table class="table table-light table-borderless table-hover text-center mb-0">
                                            <thead class="thead-dark">
                                                <tr>
                                                    <th>Order Id</th>
                                                    <th>Products</th>
                                                    <th>Invoice</th>
                                                </tr>
                                            </thead>
                                            <tbody class="align-middle">
                                                <%orders.forEach(order => { %>
                                                    <tr>
                                                        <td class="align-middle"><%=order._id.toString()%></td>
                                                        <td class="align-middle">
                                                            <ul class="list-group">
                                                                <%order.products.forEach(prod => {%>
                                                                    <li class="list-group-item"><a href="/products/<%=prod.product._id%>"><%=prod.product.title%></a></li>
                                                                <%})%>
                                                            </ul>
                                                        </td>
                                                        <td class="align-middle"><button class="btn btn-primary" onclick="window.open('/orders/<%=order._id%>')">Download Invoice</button></td>
                                                    </tr>
                                                <%})%>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
    <% } %>
    <%- include('../includes/footer.ejs')%>
</body>